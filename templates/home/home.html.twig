{% extends 'base.html.twig' %}
    {% block bl_banner %}
    <div class="bannerStyle">
        <div class="container-fluid  text-white" style="height:210px; margin-top:-55px; z-index:0; width:95.5%; margin-left:2.75%;"> 
            <div class="row"  style="width:90%; margin-left:2%; border:none; margin-top:60px; position:absolute; min-height:100px;">
                   <!-- Div Logo -->
                    <div class="col-sm" id="img_div">
                        <img src="{{ asset('assets/images/modified-logo.png') }}" class="rounded-pill float-left" alt="Logo">
                    </div>
                    <!-- Div Hour for Germany and Cameroon-->
                    <div class="col-sm" id="systemHourDe">
                        <img src="{{ asset('assets/images/flagDeRond.jpg') }}" class="rounded float-left" alt="flag">
                        <span class="badge badge-success" id="fieldDate">Dark</span>
                    </div>
                    <div class="col-sm" id="systemHourCmr">
                        <img src="{{ asset('assets/images/flagCmrRond.png') }}" class="rounded float-left" alt="flag">
                        <span class="badge badge-success" id="fieldDateCmr">Dark</span>
                    </div>
                    <!-- Div Slogan -->
                     <div class="col-sm" id="div_slogan">
                        <span class="badge badge-success">while(vie) <label id="textGreen">Manger()</label>+<label id="textRed">Coder()</label>+<label id="textYellow">Dormir()</label>;</span>
                    </div>
                    <!-- Div image right -->
                    <div class="col-sm" id="imgAct_div">
                        <img src="{{ asset('assets/images/cskAc2.jpg') }}" class="rounded-pill float-left" alt="Image Activity">
                    </div>
                    <!-- Div menu choose Language -->
                    <div class="col-sm" id="imgLanguage_div">
                        <p/><a href="#"><img src="{{ asset('assets/images/langDe.jpg') }}" class="rounded-pill float-left" alt="Lang De" data-toggle="tooltip" data-placement="top" title="Deutsch"></a>
                        <p/><a href="#"><img src="{{ asset('assets/images/langEn.png') }}" class="rounded-pill float-left" alt="Lang En" data-toggle="tooltip" data-placement="top" title="English"></a>
                        <p/><a href="#"><img src="{{ asset('assets/images/langFr.png') }}" class="rounded-pill float-left" alt="Lang Fr" data-toggle="tooltip" data-placement="top" title="Francais"></a>
                    </div>
                </div> 
            </div> 
    </div>
    {% endblock %}
    {% block bl_slideshow %}
        <div class="container-fluid" id="bloc_slide">
            <div class="row" style="width:97%; margin-left:2%">
                <div class="col-lg">
                    <!--  Hier sollen bilder in form ein Diaporama hinzugefÃ¼gt werden-->
                    
                    <div class="bd-example">
                    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                        <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                        <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="{{ asset('assets/images/cskAc1.jpg') }}" class="d-block w-100" alt="...">
                            <div class="carousel-caption d-none d-md-block">
                            <h5>Kamerunische Kueche</h5>
                            <p>Nulla vitae elit libero, a pharetra augue mollis interdum.</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="{{ asset('assets/images/cskAc2.jpg') }}" class="d-block w-100" alt="...">
                            <div class="carousel-caption d-none d-md-block">
                            <h5>Lokale Musike und Austauch</h5>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="{{ asset('assets/images/cskAc3.jpg') }}" class="d-block w-100" alt="...">
                            <div class="carousel-caption d-none d-md-block">
                            <h5>Kamerunische kultur Woche</h5>
                            <p>Praesent commodo cursus magna, vel scelerisque nisl consectetur.</p>
                            </div>
                        </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                        </a>
                    </div>
                    </div>
                <!-- end div slide -->
                </div>
            </div>
        </div>
    {% endblock %}

    {% block bl_content %}
    <!-- Hier kommen alle informationnen den unteren Blocken wie WelcomeBlock ,MissionBlock, -->
        <div class="container-fluid">
            <div class="row" style="margin-left:2%">
                <div class="col-xl" style="margin-top:5px; height:50px; text-align:left; font-size:25px;" id="bloc_welcome">
                    {% block sbl_welcome %} Welcome to the CSK !!!    <a href="#" class="btn btn-primary">read more...</a>{% endblock %}
                </div>
            </div>
            <!-- block Mission  -->
              <div class="row" style="width:97%; margin-left:2%">
                {% block sbl_mission %}
                   
                <div class="container-fluid"> 
                <div class="row">
                    <div class="col-md">
                    <div class="card mb-3">
                          <h3 class="card-header">Society  <img src="{{ asset('assets/images/icons8_society.png') }}" /></h3>
                          <div class="card-body" id="div_mission_society">
                             <p class="card-text">To improve the intergrity between Cameroonian students of
                                Clausthal and other nationalities , Germans inklusive
                             </p>
                          </div>
                          </div>
                    </div>
                    <div class="col-md">
                        <div class="card mb-3">
                         <h3 class="card-header">Integrity  <img src="{{ asset('assets/images/icons8_integrity.png') }}" /></h3>
                        <div class="card-body" id="div_mission_integrity">
                           <p class="card-text">To strenghten and help Students in their intergrity in
                             Germany 
                           </p>
                        </div>
                     </div>
                    </div>
               
                    <div class="col-md">
                        <div class="card mb-3">
                         <h3 class="card-header">Administration  <img src="{{ asset('assets/images/icons8_Administrative.png') }}"></h3>
                        <div class="card-body" id="div_mission_administration">
                          <p class="card-text" >To get in touch with the Administration and working in
                             hand with them for a better clausthal.
                          </p>
                        </div>
                    </div>
                </div>
                
            </div>

                {% endblock %}
              </div> 
            <!-- end der Deklaration von Missionen -->
            <!-- Deklaration von Last Blog und Coming event--> 
            <div class="container-fluid">
                <div class="row" style="width:99.5%; margin-left:0.85%">
                    <div class="col-md-10" style="border:1px dashed red; height:250px; text-align:center">
                        {% block sbl_lastBlog %}Latest Blog {% endblock %}
                    </div>
                    <div class="col-md-2" style="border:1px dashed green; height:250px; text-align:center">
                        {% block sbl_comingEvent %}Coming Event {% endblock %}
                    </div>
                </div>
             </div>
             <!-- ............end Deklaration..............   -->
             <!-- Block Sponsor -->
             <div class="container-fluid">
                <div class="row" style="width:99.5%; margin-left:0.85%">
                    <div class="col"  style="border:1px dashed blue; height:250px; text-align:center">
                        {% block sbl_sponsorSlide %}Pub Sponsor {% endblock %}
                    </div>
                </div>
             </div>
             <!-- end block sponsor -->
        </div>
    {% endblock %}
